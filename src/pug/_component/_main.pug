mixin pop_modal(id, img)
	div(id=`${id}` class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true")
		.modal-dialog
			button(type="button" class="btn" data-dismiss="modal"): img(src="images/notice_x.png", alt="")
		.modal-content
			.container
				img(src=`images/${img}.png`, alt="")

